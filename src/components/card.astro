---
import "../CSS/style.css";
const { link, billede, navn, arrangør, tid, sted } = Astro.props;
---

<a href={link}>
  <article>
    
    <img class="image" src={"/img/Billeder/" + billede} alt="billede af event" />
    <div class="overlay"></div>
    <div class="overlay_text">
      <h2>{navn}</h2>
      <p>{arrangør}</p>
    </div>
    <div class="pink_boks">
      <div class="lokation-tid">
        <div class="tid">
          <img src="/img/clock-2.png" alt="time">
          <p>{tid}</p>
        </div>
        <div class="lokation">
          <img src="/img/location.png" alt="pin">
          <p>{sted}</p>
        </div>
      </div>
       <img class="favorit" src="/img/heart-2.png" alt="favorit">
    </div>
  </article>
</a>

<style>
  article {
    width: 250px;
    height: 250px;
    background-color: var(--pink);
    border-radius: 30px;
    overflow: hidden;
    color: white;
    position: relative;
    box-shadow: 8px 10px 25px 2px rgba(0,0,0,0.4);
    -webkit-box-shadow: 8px 10px 25px 2px rgba(0,0,0,0.4);
    -moz-box-shadow: 8px 10px 25px 2px rgba(0,0,0,0.4);
    margin: 1em;
  }
  .image {
    width: 100%;
    height: 180px;
    position: relative;
  }
  .overlay {
    position: absolute;
    bottom: 70px;
    top: 0;
    right: 0;
    left: 0;
    background-color: rgba(0, 0, 0, 0.476);

  }
  .overlay_text {
    position: absolute;
    bottom: 80px;
    left: 5px;

  }

  .pink_boks {
    height: 30px;
    display: flex;
    flex-direction: row;
    justify-content: space-between;

  }
  .lokation {
    display: flex;
    gap: 10px;
    align-items: center;
  
  }
  .tid {
    display: flex;
    gap: 10px;
    align-items: center;
  }
  h2 {
    font-weight: 600;
    font-size: 30px;
  }
  
  .image_overlay {
    background-color: (0, 0, 0, 0.5);
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
  }
  a {
    text-decoration: none;
  }
  .favorit {
    width: 50px;
    height: 50px;
    margin-right: 5%;
    margin-top: 5px;
  }
  .lokation-tid {
    margin-left: 10px;
    display: flex;
    flex-direction: column;
    gap: 5px;
  }
</style>
