  <script>
    const burgerMenu = document.querySelector('.burger-menu');
const menuContainer = document.querySelector('.menu-container');

 burgerMenu.addEventListener('click', () => {
    //burgerMenu.style.backgroundColor ="red";
    console.log("BURGER MENU");
    burgerMenu.classList.toggle('active');
    menuContainer.classList.toggle('active');
});

  </script>
  
<style>
   button {
    border: none;
   } 

    .burger-menu {
  position: fixed;
  top: 20px;
  right: 20px;
  width: 70px;
  height: 70px;
  border-radius: 50%;
  background-color: var(--red);
  
  cursor: pointer;
  z-index: 100;
}

.burger-menu:hover span {
  background-color: var(--pink);
}

.burger-menu span {
  display: block;
  width: 30px;
  height: 4px;
  margin: 8px auto;
  background-color: rgb(255, 255, 255);
  transition: background-color 0.3s ease;
}

.menu-container {
  position: fixed;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 0;
  height: 0;
  overflow: hidden;
  z-index: 99;
}

.menu-items {
  list-style: none;
  margin: 0;
  padding: 0;
  text-align: center;
}

.menu-items li {
  margin: 20px 0;
}

.menu-items li a {
  display: block;
  font-size: 35px;
  text-decoration: none;
  color: white;
}
.burger-menu.active span:nth-of-type(1) {
  transform: rotate(45deg) translate(9px, 7px);
}

.burger-menu.active span:nth-of-type(2) {
  opacity: 0;
}

.burger-menu.active span:nth-of-type(3) {
  transform: rotate(-45deg) translate(9px, -7px);
}

.menu-container.active {
  width: 100%;
  height: 100%;
  background-color: var(--red);
  display: flex;
  justify-content: center;
  align-items: center;

}

.menu-container.active .menu-items {
  animation: menu-appear 0.5s ease;
}

@keyframes menu-appear {
  from {
    opacity: 0;
    transform: scale(0.5);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

</style>