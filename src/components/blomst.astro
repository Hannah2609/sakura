 .site-container {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100vh;
}

.flower-container {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 80%;
  max-width: 400px;
  height: 80vw;
  max-height: 400px;
  border-radius: 50%;
  position: relative;
}

.flower-image {
  position: absolute;
  transform: translate(-50%, -50%);
  border: solid 4px var(--pink);
  transition: filter 0.5s ease;
  z-index: 0;/* add this line */

  width: 40%;
  max-width: 170px;
  height: auto;
  top: 65%;
  left: 2%;
  border-radius: 50%;
  border: solid 4px var(--pink);
}


.flower-image-lg {
  width: 50%;
  max-width: 210px;
  height: auto;
  top: 35%;
  left: 50%;
  border-radius: 50%;
  border: solid 4px var(--pink);
  content: attr(data-text);
}


/* Add hover effect */
