---
import "../CSS/style.css"
---
<img src="/img/japanesesign.png" alt="Japanske tegn" class="japansketegn">

<style>
    .japansketegn {
        z-index: -2;
        position: absolute;
        left: 50%;
        top: 50%;
        transform: translate(-50%, -50%);
        max-width: 100%;
        height: auto;
        opacity: 60%;
    }

    @media only screen and (max-width: 700px) {
        .japansketegn {
            width: 30%;
            max-height: 100%;
            top: 8cm;
        }
    }
    @media only screen and (min-width: 601px) {
        .japansketegn {
            width: auto;
            max-height: 80%;
           top: 11.5cm;
        }
    }
</style>
