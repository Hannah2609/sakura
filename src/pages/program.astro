---
import "../CSS/style.css";
import Header from "../components/header.astro";
import Knap from "../components/knap.astro";
import Card from "../components/card.astro";
import Saturday from "../components/saturday.astro";
import Sunday from "../components/sunday.astro";
import Programfilter from "../components/programfilter.astro";
import Footer from "../components/footer.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>Program</title>
  </head>
  <body>
    <Header />
    <img class="venstre_blomstergren" src="/img/blomst-modsat.png" alt="Blomstergren">
    <main>
      <img class="højre_blomstergren" src="/img/blomstergren.png" alt="Blomstergren">
      <img class="blomster" src="/img/blomstergren.png" alt="Blomstergren">
      <img class="blomst" src="/img/blomst-modsat.png" alt="Blomstergren">
      <h1>Program</h1>
      <div class="filter">
        <Programfilter />
      </div>
      <h1 class="h1_red">Main stage</h1>
      <h2>Saturday</h2>
      <Saturday />

      <h2>Sunday</h2>
      <Sunday />
    </main>
    <Footer />
  </body>
</html>

<style>
  .filter {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 2em;
  }
  
@media (max-width:700px){

  h2 {
    margin-left: 5%;
     font-size: 30px;
  }
   .h1_red {
    text-align: left;
    margin: 5%;
  }
}
@media (min-width:700px){
   h2 {
    margin-left: 2%;
    font-size: 40px;
  } 
   .h1_red {
    text-align: left;
    margin: 2%;
  }

  .venstre_blomstergren{
    width: 22%;
    margin-bottom: -25%;
    position: absolute;
    left: -9%;
    top: 4%;
    z-index: -1;
    -webkit-transform:rotate(8deg);
  }

  .højre_blomstergren{
    width: 22%;
    margin-bottom: -25%;
    position: absolute;
    top: 0%;
    left: 78%;
    z-index: -1;
    transform: scaleY(-1);
    display: -webkit-box;
  }

  .blomst{
    width: 23%;
    margin-bottom: -25%;
    position: absolute;
    top: -18%;
    left: 68%;
    z-index: -2;
    -webkit-transform:rotate(10deg);
    margin-left: auto;
  }

  .blomster{
    width: 24%;
    margin-bottom: -25%;
    position: absolute;
    top: -10%;
    left: 74%;
    z-index: -2;
    -webkit-transform:rotate(-10deg);
    margin-left: auto;
  }

}
</style>
